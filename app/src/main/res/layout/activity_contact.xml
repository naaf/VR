<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context="fr.dant.vr.Contact"
    android:padding="0dp">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_action_bar_toolbar_quatre"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/color1"
        android:minHeight="90dp">
    </android.support.v7.widget.Toolbar>
    <ListView
        android:id="@+id/list_contact"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/my_action_bar_toolbar_quatre"
        android:drawSelectorOnTop="false"
        android:divider="@color/color1"
        android:dividerHeight="1dp"
        android:headerDividersEnabled="false" />

</RelativeLayout>
