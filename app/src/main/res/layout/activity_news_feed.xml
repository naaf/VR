<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:padding="0dp" android:background="@color/white"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context="fr.dant.vr.NewsFeed">

    <include layout="@layout/activity_basic_tool_bar"
        android:id="@+id/menu_bar"
        android:layout_height="100dp"
        android:layout_width="fill_parent"
        android:layout_alignParentEnd="true"
        android:layout_margin="0dp" />

    <ListView
        android:id="@+id/list_announce"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/menu_bar"
        android:drawSelectorOnTop="false"
        android:divider="@color/color1"
        android:dividerHeight="1dp" />

</RelativeLayout>
