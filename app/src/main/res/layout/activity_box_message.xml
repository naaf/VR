<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context="fr.dant.vr.BoxMessage"
    android:padding="0dp" android:background="@color/white">


    <include layout="@layout/activity_basic_tool_bar"
        android:id="@+id/menu_bar"
        android:layout_height="95dp"
        android:layout_width="fill_parent"
        android:layout_alignParentStart="false"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:id="@+id/newMessage"
        android:src="@drawable/ic_action_new_email"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_below="@+id/menu_bar"
        android:layout_alignParentEnd="true"
        android:clickable="true"
        android:background="?android:selectableItemBackground" />
    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="@color/color1"
        android:layout_below="@+id/newMessage"
        android:id="@+id/separator" />
    <ListView
        android:id="@+id/list_message"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/separator"
        android:drawSelectorOnTop="false"
        android:divider="@color/color1"
        android:dividerHeight="1dp"
        android:headerDividersEnabled="false" />

</RelativeLayout>
